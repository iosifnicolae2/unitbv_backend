<!DOCTYPE html>
<html lang="en">

<head>
    <% include parts/head_content.ejs %>
        <style>
            #add_business {
                margin-left
            }
        </style>
</head>

<body>

    <div class="container">

        <% include parts/navbar.ejs %>


<% var edit = typeof edit_category !='undefined'%>

            <div class="container">
                <div class="page-header">
                    <h3>Category Information</h3>
                </div>

                <form action="/categories/<%=edit?'edit/'+edit_category._id:'add'%>" class="form-horizontal" method="post" enctype="multipart/form-data">
                  <input id="schedule_count" type="hidden" name="schedule_count" value=1/>
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="name">Name*</label>
                        <div class="col-sm-7">
                            <input class="form-control" id="username" name="name" type="text" value="<%=edit?edit_category.name:''%>"required>
                        </div>
                    </div>

                    <div class="form-group">
                      <label class="col-sm-3 control-label" for="description">Color</label>
                      <div class="col-sm-7">
                          <input class="form-control" id="color" name="color" type="text" value="<%=edit?edit_category.color:''%>">
                      </div>
                  </div>


                    <div class="form-group">
                      <label class="col-sm-3 control-label" for="short_description">Short description</label>
                      <div class="col-sm-7">
                          <input class="form-control" id="short_description" name="short_description" type="text" value="<%=edit?edit_category.short_description:''%>">
                      </div>
                  </div>




                      <div class="form-group">
                        <label class="col-sm-3 control-label" for="description">Description</label>
                        <div class="col-sm-7">
                            <input class="form-control" id="description" name="description" type="text" value="<%=edit?edit_category.description:''%>">
                        </div>
                    </div>


                    <div class="form-group" >
                      <label class="col-sm-3 control-label" for="logo">Logo</label>
                      <div class="col-sm-7 input-group" style="padding-left: 17px;max-width: 350px;">
                            <label class="input-group-btn">
                                <span class="btn btn-primary">
                                    Browse <input id="logo" name="logo" type="file" style="display: none;" multiple="">
                                </span>
                            </label>
                            <input type="text" class="form-control" readonly="">
                        </div>
                                </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-4">
                            <button class="btn btn btn-primary" type="submit"><i class="fa fa-pencil"></i>
                              <%=edit?'Update Category':'Add Category'%></button>
                        </div>
                    </div>
                </form>

            </div>



    </div>
    <!-- /container -->


      <script type="text/javascript">
      var schedule_count=<%=edit?edit_category.schedule!=null?edit_category.schedule.length:0:1%>;
      </script>
    <% include parts/scripts.ejs %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>

    <script type="text/javascript">
    $(document).ready(function() {
      $(".js-example-basic-single").select2();
    });
    </script>

</body>

</html>
