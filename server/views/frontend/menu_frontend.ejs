<body>
<div class="page_wrapper">
<header>
  <a id="home_btn" href="/"><img class="home_logo" src="/static/static_img/unitbv_cantina.png" alt="<%=config.websiteName%>"/></a>
  <div style="float:right;" class="menu_wrapper">
  <a id="home_link" href="/" >Acasa</a>
  <a id="menu_link" href="/meniu" class="active">Meniu</a>
  <a id="menu_link" href="https://www.messenger.com/t/1733098316985352">Contact</a>
</div>
</header>
<div class="menu_container">
  <%if(todayMenu)todayMenu.forEach(function(dish){%>
  <div class="dish_row">
    <div class="dish_photo_wrapper">
      <img class="dish_photo" width="293px" src="<%=dish.cdn_logo%>" alt="<%=dish.name%>"/>
    </div>
    <div class="dish_details">
      <h4 class="dish_name"><%=dish.name%></h4>
<%if(dish.categories){%>
      <ul class="dish_cats">
        <%dish.categories.forEach(function(cat){%>
        <li class="dish_cat">
             <%=cat.name%>
        </li>
        <%})%>
      </ul>
      <%}%>
      <p class="dish_description"><%=dish.short_description%></p>
      <div class="dish_price">
        <b><%=dish.price%></b>/<span class="dish_quant"><%=dish.quantity%></span>
      </div>
    </div>
  </div>
  <%})%>
</div>


</div>
