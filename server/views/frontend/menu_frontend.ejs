</header>
<div class="menu_container">
  <%if(todayMenu)todayMenu.forEach(function(dish){%>
  <div class="dish_row">
    <div class="dish_photo_wrapper">
      <img class="dish_photo" width="293px" src="<%=dish.cdn_logo%>" alt="<%=dish.name%>"/>
    </div>
    <div class="dish_details">
      <h4 class="dish_name"><%=dish.name%></h4>
<%if(dish.categories){%>
      <ul class="dish_cats">
        <%dish.categories.forEach(function(cat){%>
        <li class="dish_cat">
             <%=cat.name%>
        </li>
        <%})%>
      </ul>
      <%}%>
      <p class="dish_description"><%=dish.short_description%></p>
      <div class="dish_price">
        <b><%=dish.price%></b>/<span class="dish_quant"><%=dish.quantity%></span>
      </div>
    </div>
  </div>
  <%})%>
</div>


</div>
